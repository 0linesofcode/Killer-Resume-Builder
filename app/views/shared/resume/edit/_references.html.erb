<div class="box_top"></div>
<div class="box">
	
	<%= render :partial => "shared/section_name_editor", :locals => {:section => "references"} %>
	
	<div class="section_options">
		<div class="options_label">Options</div>
		<div class="add">
		  <%= link_to "Add a new entry", new_resume_resume_reference_path(@resume) %>
		</div>
		<a class="disable_section" rel="field_works">Disable this section</a>
		<a class="enable_section" rel="field_works">Enable this section</a>
		<input type="hidden" class="section_mode" value="" />
	</div>
	
	<div class="clearfloat"></div>
	
	<div id="sort_references" class="sortable">
	  <% @resume.resume_references.each do |ref| %>
	    <div class="ui-state-default">
	      <a class="edit_link" href="/resumes/<%=@resume.id%>/resume_references/<%=ref.id%>/edit"></a>
	      <a class="delete_link" href="/resumes/<%=@resume.id%>/resume_references/<%=ref.id%>/delete"></a>
	      <ul class="reference_details">
	        <li><%= ref.name %>, <%= ref.title %></li>
	        <li><%= ref.organization %></li>
	      </ul>
	    </div>
	  <% end %>
	</div>
	
	<div class="clearfloat"></div>
	
</div>
<div class="box_bottom"></div>