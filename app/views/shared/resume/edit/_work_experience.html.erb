<div class="box_top"></div>
<div class="box">
	
	<%= render :partial => "shared/section_name_editor", :locals => {:section => "work_experience"} %>
	
	<div class="section_options">
		<div class="options_label">Options</div>
		<div class="add">
  	  <%= link_to "Add a new entry", new_resume_resume_work_experience_path(@resume) %>
  	</div>
		<a class="disable_section" rel="education">Disable this section</a>
		<a class="enable_section" rel="education">Enable this section</a>
		<input type="hidden" class="section_mode" value="" />
	</div>
	
	<div id="sort_education" class="sortable">
		<% @resume.resume_work_experiences.each do |we| %>
		  <div class="ui-state-default">
		    <h3 class="organization_name"><%= we.organization_name %></h3>
		    <div class="position_title"><%= we.title %></div>
		    <div class="position_date"><%= we.begin_date %> - <%= we.end_date %></div>
		    <div class="clearfloat"></div>
		    <a href="/resumes/<%=@resume.id%>/resume_work_experiences/<%=we.id%>/edit" class="edit_link"></a>
		    <a href="/resumes/<%=@resume.id%>/resume_work_experiences/<%=we.id%>/delete" class="delete_link"></a>
		  </div>
		<% end %>
	</div>
	
	<div class="clearfloat"></div>

</div>
<div class="box_bottom"></div>