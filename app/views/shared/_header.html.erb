<div id="header_wrapper">
	
	<div id="header">
	
		<h1 id="app_logo"><a href="/">Killer Resume Builder</a></h1>
		
			<% if logged_in? %>
			
			<ul id="top_panel">
        <li><%= link_to "Logout", logout_path, :class => :last  %></li>
        <li><%= link_to ("Account Settings", edit_user_path(current_user)) %></li>
        <li><%= link_to("Profile", profile_path(current_user.username)) %></li>
				<li><%= link_to "Dashboard", :controller => :dashboard, :action => :index %></li>
				<li>Hi <%= current_user.username %></li> 
			  <li id="header_profile_photo"><%= image_tag current_user.gravatar_url, :class => :user_image %></li>
			</ul>
			<% else %>
			
				<%= link_to image_tag("resume/login.png", :alt => "Login"), login_path, :id => "login_link" %>

				<%= link_to(image_tag("resume/signup.png"), signup_path, :id => "signup_link") %>
				
			<% end %>
			
			
		
		<div class="clearfloat"></div>
		
				
	</div>
	
	<div id="header_nav_wrapper">
		
	</div>
	
</div>